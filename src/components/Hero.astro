---
import { Image } from 'astro:assets';
import heroBg from '../assets/hero-bg.jpg'; 

// 1. Definimos la "API" de este componente
interface Props {
  texts: {
    badge: string;
    titleSpan: string; // La parte que cambia de color (PLUMBING / PLOMER√çA)
    subtitle: string;
    btnCall: string;
    btnServices: string;
  }
}

const { texts } = Astro.props;
const phone = "904-678-1775";
---

<section class="relative h-[85vh] flex items-center justify-center overflow-hidden">
  
  <div class="absolute inset-0 z-0">
    <Image 
      src={heroBg} 
      alt="Olveras Plumbing Background" 
      class="w-full h-full object-cover"
      quality="mid"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-olveras-blue/90 via-olveras-blue/70 to-olveras-blue/90 mix-blend-multiply"></div>
  </div>

  <div class="relative z-10 container mx-auto px-4 text-center">
    
    <span class="inline-block py-1 px-3 rounded-full bg-olveras-red/90 text-white text-sm font-bold tracking-wider mb-6 animate-pulse border border-white/20">
      {texts.badge}
    </span>

    <h1 class="text-5xl md:text-7xl font-black text-white mb-6 leading-tight drop-shadow-lg">
      OLVERAS <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-gray-300">{texts.titleSpan}</span>
    </h1>

    <p class="text-xl md:text-2xl text-gray-200 mb-10 max-w-2xl mx-auto font-light leading-relaxed">
      {texts.subtitle}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      
      <a 
        href={`tel:${phone}`} 
        class="w-full sm:w-auto bg-olveras-red hover:bg-red-700 text-white font-bold py-4 px-8 rounded-full transition-all transform hover:-translate-y-1 shadow-xl flex items-center justify-center gap-3 text-lg border-2 border-olveras-red"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        {texts.btnCall}
      </a>

      <a 
        href="#services" 
        class="w-full sm:w-auto bg-transparent hover:bg-white/10 text-white font-semibold py-4 px-8 rounded-full border-2 border-white/30 backdrop-blur-sm transition-all hover:border-white"
      >
        {texts.btnServices}
      </a>

    </div>
  </div>
</section>