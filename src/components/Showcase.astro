---
import GalleryTabs from './GalleryTabs'; 
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);

// Recibimos los textos desde index.astro
const { labels } = Astro.props;
---

<section id="showcase" class="py-20 bg-white border-t border-gray-100">
  <div class="container mx-auto px-4 text-center">
    
    <span class="inline-block py-1 px-3 rounded-full bg-red-50 text-[#E31B23] font-bold tracking-widest uppercase text-xs mb-4">
      {lang === 'en' ? 'Portfolio' : 'Portafolio'}
    </span>
    
    <h2 class="text-3xl md:text-4xl font-black text-[#0B2545] mb-6 tracking-tight">
      {labels.title} 
    </h2>

    <p class="text-gray-500 text-lg leading-relaxed max-w-2xl mx-auto mb-12 text-balance">
      {labels.subtitle}
    </p>

    <GalleryTabs 
      client:visible 
      labels={labels} 
    />
    
  </div>
</section>