---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';
import logoImage from '../assets/logo.png'; 

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const currentPath = Astro.url.pathname;
const switchUrl = lang === 'en' ? currentPath.replace(/^\/en/, '/es') : currentPath.replace(/^\/es/, '/en');
const switchLabel = lang === 'en' ? 'ES' : 'EN';
const finalSwitchUrl = switchUrl === currentPath ? (lang === 'en' ? '/es' : '/en') : switchUrl;
---

<header class="sticky top-0 z-50 bg-white shadow-md border-b border-gray-100 h-16 md:h-20 transition-all overflow-visible">
  <div class="container mx-auto px-4 h-full flex items-center justify-between relative">
    
    <a href={`/${lang}`} class="absolute top-0 left-4 z-50 group">
      <Image 
        src={logoImage} 
        alt="Olveras Plumbing" 
        class="h-24 md:h-32 w-auto object-contain drop-shadow-2xl transition-transform duration-300 group-hover:scale-105 group-hover:-rotate-2" 
        loading="eager"
        format="webp" 
      />
    </a>

    <div class="hidden md:flex items-center h-full ml-36 pl-6 border-l-2 border-gray-200">
      <p class="text-gray-700 font-medium text-lg leading-tight tracking-wide">
        {t('header.slogan')}
      </p>
    </div>

    <div class="flex items-center gap-2 md:gap-4 shrink-0 ml-auto">
      
      <div id="status-badge" class="hidden lg:flex items-center gap-2 px-3 py-1.5 rounded-full text-xs font-bold uppercase tracking-wider bg-gray-50 text-gray-400 ring-1 ring-gray-100/50 transition-all shadow-sm">
        <span class="relative flex h-2.5 w-2.5 shrink-0">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-gray-300 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-gray-400"></span>
        </span>
        <span class="whitespace-nowrap">Loading...</span>
      </div>

      <a href={finalSwitchUrl} class="font-bold text-gray-600 hover:text-[#E31B23] bg-gray-100 hover:bg-red-50 px-3 py-2 rounded-lg text-sm transition-all">
        {switchLabel}
      </a>

      <a 
        href={`tel:${t('phone.primary.link')}`}
        class="bg-[#E31B23] hover:bg-red-700 text-white pl-4 pr-5 py-2.5 rounded-xl font-bold shadow-lg shadow-red-600/20 hover:shadow-red-600/40 transition-all flex items-center gap-2 group transform hover:-translate-y-0.5"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 animate-pulse-slow" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span class="hidden sm:inline whitespace-nowrap">{t('phone.primary.display')}</span>
        <span class="sm:hidden">Call</span>
      </a>
    </div>
  </div>
</header>

<script define:vars={{ openText: t('header.open'), closedText: t('header.closed') }}>
  const now = new Date();
  const day = now.getDay(); 
  const hour = now.getHours();
  const isOpen = (day >= 1 && day <= 5) && (hour >= 9 && hour < 17);
  const badge = document.getElementById('status-badge');

  if (badge) {
    const textSpan = badge.querySelector('span.whitespace-nowrap');
    const pingSpan = badge.querySelector('.animate-ping');
    const colorSpan = badge.querySelector('.relative.inline-flex.rounded-full');

    if (isOpen) {
      badge.classList.remove('bg-gray-50', 'text-gray-400', 'ring-gray-100/50');
      badge.classList.add('bg-green-50', 'text-green-800', 'ring-green-500/30');
      if(textSpan) textSpan.textContent = openText;
      if(pingSpan) pingSpan.classList.replace('bg-gray-300', 'bg-green-500');
      if(colorSpan) colorSpan.classList.replace('bg-gray-400', 'bg-green-500');
    } else {
      badge.classList.remove('bg-gray-50', 'text-gray-400', 'ring-gray-100/50');
      badge.classList.add('bg-orange-50', 'text-orange-900', 'ring-orange-500/30');
      if(textSpan) textSpan.textContent = closedText;
      if(pingSpan) pingSpan.classList.replace('bg-gray-300', 'bg-orange-500');
      if(colorSpan) colorSpan.classList.replace('bg-gray-400', 'bg-orange-500');
    }
  }
</script>