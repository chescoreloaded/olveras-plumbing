---
interface Review {
  name: string;
  text: string;
  stars: number;
}

interface Props {
  title: string;
  subtitle: string;
  reviews: Review[];
}

const { title, subtitle, reviews } = Astro.props;
---

<section class="py-20 bg-gray-50 border-t border-gray-200">
  <div class="container mx-auto px-4">
    
    <div class="text-center mb-16">
      <h2 class="text-4xl font-black text-olveras-blue mb-4">{title}</h2>
      <p class="text-gray-600 max-w-2xl mx-auto">{subtitle}</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {reviews.map((review) => (
        <div class="bg-white p-8 rounded-2xl shadow-sm hover:shadow-md transition border border-gray-100">
          <div class="flex text-yellow-400 mb-4">
            {[...Array(review.stars)].map(() => (
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 fill-current" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          
          <p class="text-gray-600 italic mb-6">"{review.text}"</p>
          
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-full bg-gray-200 flex items-center justify-center font-bold text-olveras-blue">
              {review.name.charAt(0)}
            </div>
            <span class="font-bold text-olveras-blue">{review.name}</span>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>