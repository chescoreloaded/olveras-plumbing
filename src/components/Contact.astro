---
import ContactForm from './ContactForm';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { COMPANY_INFO } from '../consts';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const formTexts = {
  title: t('contact.form.title'),
  subtitle: t('contact.form.subtitle'),
  name: t('contact.form.name'),
  phone: t('contact.form.phone'),
  message: t('contact.form.message'),
  btnSend: t('contact.form.btnSend'),
  btnSending: t('contact.form.btnSending'),
  successTitle: t('contact.form.successTitle'),
  successMessage: t('contact.form.successMessage'),
  btnRetry: t('contact.form.btnRetry'),
  error: t('contact.form.error'),
};
---

<section id="contact" class="py-20 bg-[#0B2545] text-white overflow-hidden relative border-t border-white/5">
  
  <div class="absolute inset-0 opacity-5" style="background-image: radial-gradient(#ffffff 1px, transparent 1px); background-size: 30px 30px;"></div>

  <div class="container mx-auto px-4 relative z-10">
    <div class="flex flex-col lg:flex-row gap-16 items-start">
      
      <div class="lg:w-1/2 pt-6">
        <span class="inline-block py-1 px-3 rounded-md bg-[#E31B23]/20 text-red-200 border border-[#E31B23]/50 text-xs font-bold tracking-widest uppercase mb-4">
          {t('contact.badge')}
        </span>
        
        <h2 class="text-4xl md:text-5xl font-black mb-6 leading-tight">
          {t('contact.title')}
        </h2>
        
        <p class="text-gray-300 text-lg mb-12 leading-relaxed max-w-md text-balance">
          {t('contact.desc')}
        </p>

        <div class="space-y-8">
          
          <div class="flex items-start gap-5 group">
            <div class="w-14 h-14 rounded-2xl bg-[#E31B23] flex items-center justify-center shrink-0 text-white shadow-lg shadow-red-900/20 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">Jacksonville, FL</h4>
              <a href={COMPANY_INFO.addressLink} target="_blank" class="text-gray-400 hover:text-white transition-colors text-base">
                {t('contact.serviceArea')}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-5 group">
            <div class="w-14 h-14 rounded-2xl bg-[#E31B23] flex items-center justify-center shrink-0 text-white shadow-lg shadow-red-900/20 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">{COMPANY_INFO.phone}</h4>
              <a href={`tel:${COMPANY_INFO.phoneLink}`} class="text-gray-400 hover:text-white transition-colors block text-base">
                {t('contact.callUs')}
              </a>
            </div>
          </div>

          <div class="flex items-start gap-5 group">
            <div class="w-14 h-14 rounded-2xl bg-[#E31B23] flex items-center justify-center shrink-0 text-white shadow-lg shadow-red-900/20 group-hover:scale-110 transition-transform duration-300">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
            </div>
            <div>
              <h4 class="font-bold text-xl mb-1">Email Us</h4>
              <a href={`mailto:${COMPANY_INFO.email}`} class="text-gray-400 hover:text-white transition-colors text-base break-all">
                {COMPANY_INFO.email}
              </a>
            </div>
          </div>

        </div>
      </div>

      <div class="lg:w-1/2 w-full">
        <ContactForm client:visible texts={formTexts} />
      </div>

    </div>
  </div>
</section>