---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Image } from 'astro:assets';

// --- 1. IMPORTACIÓN DE FOTOS "MUESTRA" (LAS "PERFECTAS") ---
// Estas imágenes venden el sueño/resultado ideal en la tarjeta.
import imgServiceFilter from '../assets/service-filter.jpg';
import imgServiceBath from '../assets/service-bath.jpg';
import imgServicePipe from '../assets/service-pipe.jpg';
import imgServiceDrain from '../assets/service-drain.jpg';
import imgServiceHeater from '../assets/service-heater.jpg';
import imgServiceEmergency from '../assets/service-emergency.jpg';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface Props {
  title: string;
  subtitle: string;
  items?: any[]; 
}

// --- 2. ICONOS SVG ---
const icons = {
  filtration: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z" /></svg>`,
  remodel: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" /></svg>`,
  pipe: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M21 7.5l-9-5.25L3 7.5m18 0l-9 5.25m9-5.25v9l-9 5.25M3 7.5l9 5.25M3 7.5v9l9 5.25m0-9v9" /></svg>`,
  drain: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" /></svg>`,
  heater: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0112 21 8.25 8.25 0 016.038 7.048 8.287 8.287 0 009 9.6a8.983 8.983 0 013.361-6.867 8.21 8.21 0 003 2.48z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 00.495-7.467 5.99 5.99 0 00-1.925 3.546 5.974 5.974 0 01-2.133-1A3.75 3.75 0 0012 18z" /></svg>`,
  emergency: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" /></svg>`
};

// --- 3. DATOS DE CONTENIDO ---
// 'image' usa las fotos perfectas. 'id' usa las categorías para filtrar la galería real.
const servicesData = lang === 'en' ? [
  { 
    id: 'filtration', 
    title: "Water Softeners & Filtration", 
    description: "Installation of whole-house filtration systems to protect your health and appliances.", 
    icon: icons.filtration,
    image: imgServiceFilter 
  },
  { 
    id: 'bathroom', 
    title: "Bathroom Remodeling", 
    description: "Complete renovations: From demolition to luxury finishes (Tile, Vanity, Showers).", 
    icon: icons.remodel,
    image: imgServiceBath 
  },
  { 
    id: 'repiping', 
    title: "PEX Repiping", 
    description: "Replace old, corroded pipes with modern, durable PEX piping systems.", 
    icon: icons.pipe,
    image: imgServicePipe 
  },
  { 
    id: 'drain', 
    title: "Drain Cleaning", 
    description: "Professional unclogging and cleaning for sinks, showers, and main lines.", 
    icon: icons.drain,
    image: imgServiceDrain 
  },
  { 
    id: 'heater', 
    title: "Water Heaters", 
    description: "Installation and repair of tankless and traditional water heater units.", 
    icon: icons.heater,
    image: imgServiceHeater 
  },
  { 
    id: 'emergency', 
    title: "24/7 Emergencies", 
    description: "Immediate response for leaks, bursts, and urgent plumbing failures.", 
    icon: icons.emergency,
    image: imgServiceEmergency 
  },
] : [
  { 
    id: 'filtration', 
    title: "Filtros y Suavizadores", 
    description: "Instalación de sistemas de filtración para toda la casa. Protege tu salud y tuberías.", 
    icon: icons.filtration,
    image: imgServiceFilter 
  },
  { 
    id: 'bathroom', 
    title: "Remodelación de Baños", 
    description: "Renovaciones completas: Desde la demolición hasta acabados de lujo (Azulejo, Duchas).", 
    icon: icons.remodel,
    image: imgServiceBath 
  },
  { 
    id: 'repiping', 
    title: "Re-tubería (Repiping)", 
    description: "Reemplazo de tuberías viejas y oxidadas con sistema moderno PEX.", 
    icon: icons.pipe,
    image: imgServicePipe 
  },
  { 
    id: 'drain', 
    title: "Limpieza de Drenajes", 
    description: "Desatasco profesional y limpieza profunda para lavabos y drenajes principales.", 
    icon: icons.drain,
    image: imgServiceDrain 
  },
  { 
    id: 'heater', 
    title: "Calentadores de Agua", 
    description: "Instalación y reparación de calentadores tradicionales y sin tanque (Tankless).", 
    icon: icons.heater,
    image: imgServiceHeater 
  },
  { 
    id: 'emergency', 
    title: "Emergencias 24/7", 
    description: "Respuesta inmediata para fugas, roturas y fallos urgentes de plomería.", 
    icon: icons.emergency,
    image: imgServiceEmergency 
  },
];

const { title, subtitle } = Astro.props;
---

<section id="services" class="py-20 md:py-24 bg-gray-50 font-sans">
  <div class="container mx-auto px-4 md:px-8">
    
    <div class="text-center max-w-3xl mx-auto mb-16 md:mb-20">
      <span class="text-[#E31B23] font-bold tracking-widest uppercase text-sm mb-3 block animate-fade-in">
        {lang === 'en' ? 'What we do' : 'Qué Hacemos'}
      </span>
      <h2 class="text-4xl md:text-5xl font-black text-[#0B2545] mb-6 leading-tight text-balance animate-fade-in animation-delay-200">
        {title}
      </h2>
      <div class="w-24 h-1.5 bg-[#E31B23] mx-auto mb-6 rounded-full"></div>
      <p class="text-gray-600 text-lg leading-relaxed text-balance animate-fade-in animation-delay-400">
        {subtitle}
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      
      {servicesData.map((item, index) => (
        <div class="group bg-white rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 overflow-hidden border border-gray-100 flex flex-col h-full animate-fade-in-up" style={`animation-delay: ${index * 100}ms`}>
          
          <div class="relative h-56 overflow-hidden bg-gray-200">
            <div class="absolute inset-0 bg-[#0B2545]/10 group-hover:bg-[#0B2545]/0 transition-colors duration-500 z-10 mix-blend-multiply"></div>
            
            <Image 
              src={item.image} 
              alt={item.title} 
              class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              width={600}
              height={400}
              loading="lazy"
            />
          </div>

          <div class="relative px-8 h-0">
            <div class="absolute -top-10 left-8 bg-[#E31B23] text-white p-4 rounded-xl shadow-lg shadow-red-900/20 group-hover:scale-110 transition-transform duration-300 flex items-center justify-center z-20 border-4 border-white">
              <div class="w-8 h-8" set:html={item.icon} />
            </div>
          </div>

          <div class="pt-14 pb-8 px-8 flex-grow flex flex-col">
            <h3 class="text-2xl font-bold text-[#0B2545] mb-3 group-hover:text-[#E31B23] transition-colors">
              {item.title}
            </h3>
            <p class="text-gray-500 leading-relaxed mb-6 flex-grow text-sm md:text-base">
              {item.description}
            </p>
            
            <a 
              href={`#showcase?category=${item.id}`}
              class="flex items-center text-[#0B2545] font-bold text-sm uppercase tracking-wider group-hover:translate-x-2 transition-transform cursor-pointer mt-auto border-t border-gray-100 pt-4"
              onclick={`setTimeout(() => { window.location.hash = '#showcase?category=${item.id}'; }, 50)`}
            >
              {lang === 'en' ? 'See Photos' : 'Ver Fotos'}
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-2 text-[#E31B23]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      ))}

    </div>
  </div>
</section>

<style>
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .animate-fade-in-up {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0; 
  }
</style>